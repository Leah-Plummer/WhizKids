@model WhizKids.Models.ViewModels.StudentProfileViewModel

@{ ViewData["Title"] ="Profile"; }
<div>
  <h1 class="mb-4">@Model.UserProfile.FirstName @Model.UserProfile.LastName</h1>

  <section class="container">
    <img
      style="width:100px;float:left;margin-right:20px"
      src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg"
    />
    <div>
      <label class="font-weight-bold">Address:</label>
      <span>@Model.UserProfile.Address</span>
    </div>
    <div>
      <label class="font-weight-bold">PhoneNumber:</label>
      <span>@Model.UserProfile.PhoneNumber</span>
    </div>
     <div>
      <label class="font-weight-bold">FirstName:</label>
      <span>@Model.Student.FirstName</span>
    </div>
    <div>
      <label class="font-weight-bold">LastName:</label>
      <span>@Model.Student.LastName</span>
    </div>
    <div>
      <label class="font-weight-bold">FirstName:</label>
      <span>@Model.UserProfile.FirstName</span>
    </div>
    <div>
      <label class="font-weight-bold">LastName:</label>
      <span>@Model.UserProfile.LastName</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  
   